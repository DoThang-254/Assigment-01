@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DoQuangThang_SE1885_A01_FE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DoQuangThang_SE1885_A01_FE.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">DoQuangThang_SE1885_A01_FE</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @* Ví dụ: Menu quản lý chỉ hiện khi là Staff/Admin *@
                        @if (Context.Session.GetInt32("Role") == 1)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/News/Index">Manage News</a>
                            </li>
                            <li>
                                <a class="nav-link text-dark" asp-page="/News/NewsHistory">
                                    History News
                                </a>
                            </li>
                            <li>
                                <a class="nav-link text-dark" asp-page="/Categories/Index">
                                     Categories Management
                                </a>
                            </li>
                            <li>
                                <a class="nav-link text-dark" asp-page="/Tags/Index">
                                    Tags Management
                                </a>
                            </li>

                        }
                        @if (Context.Session.GetInt32("Role") == 0)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Reports/Index">DashBoard</a>
                            </li>
                            <li>
                                <a class="nav-link text-dark" asp-page="/Accounts/Index">
                                     Account Management
                                </a>
                            </li>
                            

                        }
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @{
                            var accName = Context.Session.GetString("Email");
                            var roleId = Context.Session.GetInt32("Role");
                            string roleName = roleId == 1 ? "Staff" : (roleId == 2 ? "Lecturer" : "Admin");
                        }

                        @if (string.IsNullOrEmpty(accName))
                        {
                            // --- TRƯỜNG HỢP CHƯA LOGIN ---
                            <li class="nav-item">
                                <a class="btn btn-outline-primary" asp-page="/Accounts/Login">Login</a>
                            </li>
                        }
                        else
                        {
                            // --- TRƯỜNG HỢP ĐÃ LOGIN ---
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark fw-bold" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle"></i> @accName - <span class="badge bg-secondary">@roleName</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-page="/Accounts/Profile">
                                            <i class="bi bi-person-vcard"></i> Profile
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item text-danger" asp-page="/Accounts/Logout">
                                            <i class="bi bi-box-arrow-right"></i> Logout
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - DoQuangThang_SE1885_A01_FE - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>