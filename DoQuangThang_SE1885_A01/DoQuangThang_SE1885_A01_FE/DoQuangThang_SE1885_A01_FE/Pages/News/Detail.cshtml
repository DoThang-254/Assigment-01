@page
@model DoQuangThang_SE1885_A01_FE.Pages.News.DetailModel
@{
}

<div class="container mt-4">
    <a asp-page="./Index" class="btn btn-secondary mb-3">⬅ Back to List</a>

    @if (Model.News != null)
    {
        <article class="card shadow-sm p-4">
            <h1 class="display-5 text-primary">@Model.News.NewsTitle</h1>
            
            <div class="d-flex justify-content-between text-muted border-bottom pb-2 mb-3">
                <span><strong>Category:</strong> @Model.News.Category?.CategoryName</span>
                <span><strong>Posted on:</strong> @Model.News.CreatedDate?.ToString("MMMM dd, yyyy")</span>
                <span><strong>Author:</strong> @Model.News.CreatedBy?.AccountName</span>
            </div>

            <p class="lead fw-bold text-secondary">@Model.News.Headline</p>

            <div class="news-content" style="white-space: pre-line; line-height: 1.8;">
                @Model.News.NewsContent
            </div>

            @if (Model.News.Tags != null && Model.News.Tags.Any())
            {
                <div class="mt-4 border-top pt-3">
                    <strong>Tags:</strong>
                    @foreach (var tag in Model.News.Tags)
                    {
                        <span class="badge bg-info text-dark me-1">#@tag.TagName</span>
                    }
                </div>
            }
        </article>
    }
</div>

@if (Model.RelatedArticles.Any())
{
    <div class="mt-5">
        <h4 class="mb-3 border-bottom pb-2">💡 Related Articles</h4>
        <div class="row">
            @foreach (var related in Model.RelatedArticles)
            {
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <span class="badge bg-secondary mb-2">@related.Category?.CategoryName</span>
                            <h6 class="card-title">
                                <a asp-page="./Details" asp-route-id="@related.NewsArticleId" class="text-decoration-none">
                                    @related.NewsTitle
                                </a>
                            </h6>
                            <p class="card-text small text-muted">
                                @(related.Headline?.Length > 80 ? related.Headline.Substring(0, 80) + "..." : related.Headline)
                            </p>
                        </div>
                        <div class="card-footer bg-transparent border-0">
                            <small class="text-muted">@related.CreatedDate?.ToString("dd/MM/yyyy")</small>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}